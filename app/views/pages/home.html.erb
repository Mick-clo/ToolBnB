          <%= cl_image_tag tool.photo.key, height: 300, width: 400, crop: :fill %>
          <h2><%= tool.title %></h2>
          <p> <%= number_to_currency(tool.price, unit: 'â‚¬', format: "%n%u", precision: 2) %></p>
         
          <p><%= tool.description %></p>
